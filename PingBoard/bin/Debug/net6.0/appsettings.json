{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

    "PingingBehavior": {
      "TimeoutMs"    : 3000,
      "WaitMs"       : 1000,
      "PayloadStr" : "@MIT_License@ https://github.com/MicroscopyGuy/PingBoard"    
    },
  
    "PingingThresholds": {
      "AveragePingMs" : 60,
      "JitterMs" : 30,
      "MinimumPingMs" : 100,
      "PacketLossPercentage": 0
      
    }
}
