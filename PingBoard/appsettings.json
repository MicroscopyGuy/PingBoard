{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

    "PingingBehavior": {
      "PayloadStr"   : "@MIT_License@ https://github.com/MicroscopyGuy/PingBoard",
      "PingsPerCall" : 8,
      "TimeoutMs"    : 1500,
      "Ttl"          : 128,  
      "WaitMs"       : 1000
    },
  
    "PingingThresholds": {
      "MinimumPingMs" : 40,
      "AveragePingMs" : 60,
      "MaximumPingMs" : 100,
      "JitterMs" : 30,
      "PacketLossPercentage": 0,
      "PossibleOutageAfterTimeouts" : 2
    },

    "MonitoringThresholds":{
      "OutageAfterReports" : 2
    }
}
