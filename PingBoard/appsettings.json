{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

    "PingingBehavior": {
      "TimeoutMs"    : 3000,
      "WaitMs"       : 150,
      "PayloadStr"   : "@MIT_License@ https://github.com/MicroscopyGuy/PingBoard",
      "Ttl"          : 128   
    },
  
    "PingingThresholds": {
      "MinimumPingMs" : 40,
      "AveragePingMs" : 60,
      "MaximumPingMs" : 500,
      "JitterMs" : 30,
      "PacketLossPercentage": 0
    }
}
