{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

    "PingingBehavior": {
      "PayloadStr"   : "@MIT_License@ https://github.com/MicroscopyGuy/PingBoard",
      "PingsPerCall" : 8,
      "TimeoutMs"    : 1500,
      "Ttl"          : 128,  
      "WaitMs"       : 1000,
      "ReportBackAfterConsecutiveTimeouts" : 2
    },
  
    "PingingThresholds": {
      "MinimumPingMs" : 40,
      "AveragePingMs" : 50,
      "MaximumPingMs" : 100,
      "JitterMs" : 15,
      "PacketLossPercentage": 0
    },

    "MonitoringBehavior":{
      "OutageAfterTimeouts" : 4
    }
}
